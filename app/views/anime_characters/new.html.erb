<div class="w-5/6 lg:w-full max-w-md mx-auto my-8">
  <%= form_with(model: @anime_character, local: true, class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4') do |form| %>
    <div class="mb-4">
      <label class="block text-grey-darker text-sm font-bold mb-2">
        キャラクタの名前
      </label>
      <%= form.text_field :character_name, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="mb-4">
      <label class="block text-grey-darker text-sm font-bold mb-2">
        アニメの名前
      </label>
      <%= form.text_field :anime_title, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="flex items-center justify-between">
      <%= form.submit '完了する', class: 'text-white font-semibold bg-grey-darkest hover:bg-black py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      <%= link_to '戻る', :back, class: 'inline-block align-baseline font-bold text-sm text-grey-darkest hover:text-black' %>
    </div>
  <% end %>
</div>
<div class="text-black font-bold text-xl w-5/6 m-auto my-4 text-center"><%= @actor.name %>さん 登場キャラクター</div>
<div class="flex flex-wrap lg:flex-col justify-start">
  <% @actor.characters.each do |character| %>
    <div class="max-w-sm mx-auto my-2 w-5/6 lg:flex">
      <div class="border-b border-grey-darkest w-full py-2 leading-normal">
        <div class="text-black font-bold text-md"><%= link_to character.name, character_path(character) %></div>
        <p class="text-grey-darker"><%= character.anime[0]&.title %></p>
      </div>
    </div>
  <% end %>
</div>